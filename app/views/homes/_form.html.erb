<%= form_with(model: home, local: true) do |form| %>
  <% if home.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(home.errors.count, "error") %> prohibited this home from being saved:</h2>

      <ul>
        <% home.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label "物件名" %>
    <%= form.text_field :home_name %>
  </div>

  <div class="field">
    <%= form.label "賃料"%>
    <%= form.text_field :price %>
  </div>

  <div class="field">
    <%= form.label "住所"%>
    <%= form.text_field :address %>
  </div>

  <div class="field">
    <%= form.label "徒歩分数"%>
    <%= form.text_field :old %>
  </div>

  <div class="field">
    <%= form.label "備考"%>
    <%= form.text_field :comment %>
  </div>

  <% ct = 1%>
  <%= form.fields_for :stations do | station | %>
    <h2>最寄り駅<%= ct %></h2>
    <div class="field">
      <%= station.label "路線名" %>
      <%= station.text_field :train_name %>
    </div>
    <div class="field">
      <%= station.label "駅名" %>
      <%= station.text_field :station_name %>
    </div>
    <div class="field">
      <%= station.label "徒歩分数"%>
      <%= station.text_field :on_foot %>
    </div>
    <% ct += 1 %>
  <% end %>

  <div class="actions">
    <% if action_name == "new" || action_name == "create" %>
      <%= form.submit "登録する" %>
    <% else %>
      <%= form.submit "更新する" %>
    <% end %>
  </div>
<% end %>
