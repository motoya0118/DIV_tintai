<p id="notice"><%= notice %></p>

<p>
  <strong>物件名:</strong>
  <%= @home.home_name %>
</p>

<p>
  <strong>賃料:</strong>
  <%= @home.price %>
</p>

<p>
  <strong>住所:</strong>
  <%= @home.address %>
</p>

<p>
  <strong>築年数:</strong>
  <%= @home.old %>
</p>

<p>
  <strong>備考:</strong>
  <%= @home.comment %>
</p>

<% ct = 1 %>
<% @home.stations.each do |station| %>
  <h2>最寄り駅<%= ct %></h2>
  <p>
    <strong>路線名</strong>
    <%= station.train_name %>
  </p>

  <p>
    <strong>駅名</strong>
    <%= station.station_name %>
  </p>

  <p>
    <strong>徒歩分数</strong>
    <%= station.on_foot %>
  </p>
  <% ct += 1 %>
<% end %>


<%= link_to '編集', edit_home_path(@home) %> |
